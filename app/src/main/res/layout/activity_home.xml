<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <ImageView
        android:id="@+id/bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_home"
        android:contentDescription="@null"/>

    <include
        android:id="@+id/includeTopBar"
        layout="@layout/topnavbar"/>

    <!-- Scrollable features -->
    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:clipToPadding="false"
        android:padding="16dp"
        android:layout_height="720dp"
        android:layout_weight="1"
        android:paddingBottom="100dp"
    android:fadeScrollbars="false"
    android:fillViewport="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:id="@+id/cardContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:animateLayoutChanges="true">

        <!-- Emotion-to-Art -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardEmotion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:foreground="?attr/selectableItemBackground"
            android:clickable="true"
            app:cardCornerRadius="18dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="18dp"
                android:orientation="vertical"
                android:background="@drawable/bg_card_orange">

                <TextView
                    android:id="@+id/t1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Emotion-to-Art Translator  🎨"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="Describe your emotions through text, emojis, or voice, and our AI transforms them into personalized graffiti-style art or comics. A creative outlet for those who struggle to express feelings verbally, offering a therapeutic way to reflect and self-express."
                    android:textSize="14sp"
                    android:lineSpacingExtra="2dp"
                    android:textColor="@android:color/white"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- What-If -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardWhatIf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:foreground="?attr/selectableItemBackground"
            android:clickable="true"
            app:cardCornerRadius="18dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="18dp"
                android:orientation="vertical"
                android:background="@drawable/bg_card_blue">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="“What-If” Scenario Simulator  🌀"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="Share your worries, like fears of failure or rejection, and our AI generates positive yet realistic scenarios to reframe negative thoughts. This tool builds emotional resilience, reduces anxiety, and promotes a balanced outlook on life’s challenges."
                    android:textSize="14sp"
                    android:lineSpacingExtra="2dp"
                    android:textColor="@android:color/white"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Stories -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardStory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:foreground="?attr/selectableItemBackground"
            android:clickable="true"
            app:cardCornerRadius="18dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="18dp"
                android:orientation="vertical"
                android:background="@drawable/bg_card_green">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Peer-Support Story Generator  📖"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="Discover relatable stories of young people overcoming challenges like anxiety, academic pressure, or bullying. Tailored to your experiences, these short narratives offer comfort, motivation, and practical insights, reminding you that you're never alone."
                    android:textSize="14sp"
                    android:lineSpacingExtra="2dp"
                    android:textColor="@android:color/white"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Music -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardMusic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:foreground="?attr/selectableItemBackground"
            android:clickable="true"
            app:cardCornerRadius="18dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="18dp"
                android:orientation="vertical"
                android:background="@drawable/bg_card_purple">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Generative Music for Mood Regulation  🎵"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="Immerse yourself in AI-generated soundscapes that match your emotions. Using inputs like text, voice, or wearable data, the music adapts in real time to calm anxiety, sharpen focus, or boost energy—helping you regulate mood and support well-being."
                    android:textSize="14sp"
                    android:lineSpacingExtra="2dp"
                    android:textColor="@android:color/white"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Mindful Alerts -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardAlert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:foreground="?attr/selectableItemBackground"
            android:clickable="true"
            app:cardCornerRadius="18dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="18dp"
                android:orientation="vertical"
                android:background="@drawable/bg_card_magenta">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/mindful_alerts"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="Stay mindful of your digital habits with gentle AI reminders. By tracking patterns like excessive social media use or long screen time, it offers timely nudges—suggesting breaks, breathing exercises, or study pauses to boost focus and balance."
                    android:textSize="14sp"
                    android:lineSpacingExtra="2dp"
                    android:textColor="@android:color/white"/>

                <Button
                    android:id="@+id/btnGrantAccess"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:text="Grant Access"
                    android:textAllCaps="false"
                    android:background="@drawable/rounded_dark_button"
                    android:textColor="@android:color/white"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- VR -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardVR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="24dp"
            android:foreground="?attr/selectableItemBackground"
            android:clickable="true"
            app:cardCornerRadius="18dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="18dp"
                android:orientation="vertical"
                android:background="@drawable/bg_card_cyan">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Emotion-to-World (VR)"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="Step into AI-crafted VR worlds that adapt to your emotions—like a misty forest for anxiety or a serene meadow for calm. With guided breathing and movement, the environment transforms as you do, offering a powerful tool for emotional balance."
                    android:textSize="14sp"
                    android:lineSpacingExtra="2dp"
                    android:textColor="@android:color/white"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</ScrollView>

    <!-- Bottom Chat Input -->
<LinearLayout
android:id="@+id/chatContainer"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_gravity="bottom|center_horizontal"
android:layout_margin="16dp"
android:orientation="vertical">

<com.google.android.material.card.MaterialCardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="12dp"
        android:paddingTop="8dp"
        android:paddingEnd="8dp"
        android:paddingBottom="8dp">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Type your prompt here..."
            app:boxBackgroundMode="filled"
            app:boxCornerRadiusTopStart="16dp"
            app:boxCornerRadiusTopEnd="16dp"
            app:boxCornerRadiusBottomStart="16dp"
            app:boxCornerRadiusBottomEnd="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etChatPrompt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:maxLines="4"
                android:minLines="1"
                android:imeOptions="actionSend"
                android:padding="10dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <ImageButton
            android:id="@+id/btnSendPrompt"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginStart="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Send prompt"
            android:src="@android:drawable/ic_menu_send"/>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
</LinearLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
