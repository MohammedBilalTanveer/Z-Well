<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <!-- Background Image -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_home"
        android:contentDescription="@string/app_name"/>

    <!-- Top AppBar with title centered, menu left, settings right -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:backgroundTint="@android:color/transparent"
        app:title="@string/app_name"
        app:titleCentered="true"
        app:navigationIcon="@drawable/ic_menu"
        app:menu="@menu/menu_home"
    />

    <!-- Scrollable content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:spacing="8dp">

            <!-- Feature buttons -->
            <Button
                android:id="@+id/btnUsageAccess"
                android:text="Enable Mindful Alerts (Usage Access)"
                android:layout_marginTop="12dp"
                android:backgroundTint="@color/purple_500"
                android:textColor="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/btnMindfulCoach"
                android:text="🧘 Mindful Coach"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/teal_700"
                android:textColor="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/cardEmotion"
                android:text="🎨 Emotion → Art"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="@android:color/white"
                android:textColor="@android:color/black"
                android:padding="16dp"/>

            <Button
                android:id="@+id/cardWhatIf"
                android:text="🌀 What-If Simulator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="@android:color/white"
                android:textColor="@android:color/black"
                android:padding="16dp"/>

            <Button
                android:id="@+id/cardStory"
                android:text="📖 Peer Story"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="@android:color/white"
                android:textColor="@android:color/black"
                android:padding="16dp"/>

            <Button
                android:id="@+id/cardMusic"
                android:text="🎵 Mood Music"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="@android:color/white"
                android:textColor="@android:color/black"
                android:padding="16dp"/>

            <Button
                android:id="@+id/cardVR"
                android:text="🌍 VR World"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="@android:color/white"
                android:textColor="@android:color/black"
                android:padding="16dp"/>

        </LinearLayout>
    </ScrollView>

    <!-- Chatbot FAB bottom-right -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:contentDescription="@string/chatbot"
        app:srcCompat="@android:drawable/ic_dialog_email"
        app:tint="@android:color/white"
        app:backgroundTint="@color/teal_700"
        app:layout_anchor="@id/topAppBar"
        app:layout_anchorGravity="bottom|end"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>