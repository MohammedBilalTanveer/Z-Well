<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Optional background (replace with your image if you like) -->
    <ImageView
        android:id="@+id/bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_home"
        android:contentDescription="@null"/>

    <!-- AppBar with centered title, left nav icon, right settings -->
    <include
        android:id="@+id/includeTopBar"
        layout="@layout/topnavbar"/>

    <!-- Scrollable card stack -->
    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:fadeScrollbars="false">

        <LinearLayout
            android:id="@+id/cardContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:animateLayoutChanges="true">

            <!-- 1) Emotion-to-Art -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardEmotion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:foreground="?attr/selectableItemBackground"
                app:cardCornerRadius="18dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="18dp"
                    android:orientation="vertical"
                    android:background="@drawable/bg_card_orange">

                    <TextView
                        android:id="@+id/t1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Emotion-to-Art Translator  ðŸŽ¨"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="â€¢ Youths describe feelings (text/emoji/voice); AI creates personalized art, graffiti-style images, or comics that reflect their emotions.\nâ€¢ Helps externalize emotions visually (great for non-verbal expression)."
                        android:textSize="14sp"
                        android:lineSpacingExtra="2dp"
                        android:textColor="@android:color/white"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 2) What-If -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardWhatIf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:foreground="?attr/selectableItemBackground"
                app:cardCornerRadius="18dp"
                app:cardElevation="6dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="18dp"
                    android:orientation="vertical"
                    android:background="@drawable/bg_card_blue">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="â€œWhat-Ifâ€ Scenario Simulator  ðŸŒ€"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="â€¢ Type worries (â€œWhat if I fail?â€ / â€œWhat if my friends donâ€™t like me?â€).\nâ€¢ AI suggests safe, optimistic but realistic alternate scenarios, building resilience and reducing catastrophic thinking."
                        android:textSize="14sp"
                        android:lineSpacingExtra="2dp"
                        android:textColor="@android:color/white"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 3) Peer-Support Story -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardStory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:foreground="?attr/selectableItemBackground"
                app:cardCornerRadius="18dp"
                app:cardElevation="6dp"
               >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="18dp"
                    android:orientation="vertical"
                    android:background="@drawable/bg_card_green">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Peer-Support Story Generator  ðŸ“–"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="â€¢ Short, relatable stories of youths overcoming similar struggles (anxiety, exam pressure, bullying).\nâ€¢ Personalized narratives that mirror their situationâ€”helps them feel less alone."
                        android:textSize="14sp"
                        android:lineSpacingExtra="2dp"
                        android:textColor="@android:color/white"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 4) Generative Music -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardMusic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:foreground="?attr/selectableItemBackground"
                app:cardCornerRadius="18dp"
                app:cardElevation="6dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="18dp"
                    android:orientation="vertical"
                    android:background="@drawable/bg_card_purple">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Generative Music for Mood Regulation  ðŸŽµ"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="â€¢ AI creates real-time background music from emotional cues (text, speech tone, or wearables).\nâ€¢ Produces calming, focusing, or energizing soundscapes on demand."
                        android:textSize="14sp"
                        android:lineSpacingExtra="2dp"
                        android:textColor="@android:color/white"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 5) Alerts + Login CTA -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardAlert"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:foreground="?attr/selectableItemBackground"
                app:cardCornerRadius="18dp"
                app:cardElevation="6dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="18dp"
                    android:orientation="vertical"
                    android:background="@drawable/bg_card_magenta">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mindful Alerts  ðŸ””"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="â€¢ Warn when social media usage is high.\nâ€¢ Suggest 5-minute study breaks and breathing techniques.\nâ€¢ Detect studying patterns (e.g., long time viewing photos/PDFs) to offer helpful nudges."
                        android:textSize="14sp"
                        android:lineSpacingExtra="2dp"
                        android:textColor="@android:color/white"/>

                    <Button
                        android:id="@+id/btnLogin"
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:text="Log in"
                        android:textAllCaps="false"
                        android:background="@drawable/rounded_dark_button"
                        android:textColor="@android:color/white"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 6) Emotion-to-World (VR) + Sign up CTA -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardVR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="24dp"
                android:foreground="?attr/selectableItemBackground"
                app:cardCornerRadius="18dp"
                app:cardElevation="6dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="18dp"
                    android:orientation="vertical"
                    android:background="@drawable/bg_card_cyan">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Emotion-to-World (VR)  ðŸŒ"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="â€¢ Pick a mood; AI builds a matching VR world (anxiety = foggy forest, calm = sunny meadow).\nâ€¢ With breath/movement practice, the world brightens to reflect emotional regulation."
                        android:textSize="14sp"
                        android:lineSpacingExtra="2dp"
                        android:textColor="@android:color/white"/>

                    <Button
                        android:id="@+id/btnSignup"
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:text="Sign up"
                        android:textAllCaps="false"
                        android:background="@drawable/rounded_dark_button"
                        android:textColor="@android:color/white"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

    <!-- Chatbot FAB -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:contentDescription="@string/app_name"
        app:srcCompat="@android:drawable/ic_btn_speak_now"
        app:tint="@android:color/white"
        app:backgroundTint="@color/teal_700"
        app:layout_anchorGravity="bottom|end"
        android:layout_gravity="bottom|end"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
